{
    "name": "config-vir",
    "version": "0.0.0",
    "description": "Small package for creating typed json files in backend servers.",
    "keywords": [
        "config",
        "file",
        "json",
        "backend"
    ],
    "homepage": "https://github.com/electrovir/config-vir",
    "bugs": {
        "url": "https://github.com/electrovir/config-vir/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/config-vir"
    },
    "license": "MIT",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "compile": "rm -rf dist && virmator compile",
        "docs:update": "virmator code-in-markdown",
        "format": "virmator format",
        "prepublishOnly": "npm run compile && npm run test:all",
        "spellcheck": "virmator spellcheck",
        "start": "npm install && virmator frontend",
        "test": "virmator test",
        "test:all": "npm run test:types && npm test && npm run spellcheck && npm run test:format && npm run test:docs",
        "test:docs": "virmator code-in-markdown check",
        "test:format": "virmator format check",
        "test:types": "tsc --noEmit"
    },
    "dependencies": {
        "@augment-vir/common": "^4.2.1",
        "@augment-vir/node-js": "^4.2.1",
        "fs-extra": "^10.1.0",
        "type-fest": "^3.2.0"
    },
    "devDependencies": {
        "@augment-vir/chai": "^4.2.1",
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/chai": "^4.3.4",
        "@types/fs-extra": "^9.0.13",
        "@types/mocha": "^10.0.0",
        "@types/node": "^18.11.9",
        "chai": "^4.3.7",
        "chai-as-promised": "^7.1.1",
        "cspell": "^6.14.2",
        "istanbul-smart-text-reporter": "^0.0.1",
        "markdown-code-example-inserter": "^0.1.11",
        "mocha": "^10.1.0",
        "mocha-spec-reporter-with-file-names": "^0.0.2",
        "nyc": "^15.1.0",
        "prettier": "^2.7.1",
        "prettier-plugin-jsdoc": "^0.4.2",
        "prettier-plugin-multiline-arrays": "^1.1.1",
        "prettier-plugin-organize-imports": "^3.2.0",
        "prettier-plugin-packagejson": "^2.3.0",
        "prettier-plugin-sort-json": "^0.0.3",
        "prettier-plugin-toml": "^0.3.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4",
        "virmator": "^4.3.1"
    }
}
